@model MyELearningProject.DAL.Entities.Student

@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Öğrenci Girişi</h2>

<form method="post">
    <input type="hidden" name="StudentID" value="@Model.StudentID" />
    <br />
    <label>Adı</label>
    <input type="text" name="Name" value="@Model.Name" class="form-control" required />
    <br />
    <br />
    <label>Soyadı</label>
    <input type="text" name="Surname" value="@Model.Surname" class="form-control" required />
    <br />
    <br />
    <label>Email</label>
    <input type="hidden" name="Email" value="@Model.Email" class="form-control" required />
    <br />
    <br />
    <label>Password</label>
    <input type="password" name="Password" value="@Model.Password" class="form-control" required />

    <button class="btn btn-primary">Öğrenciyi Güncelle</button>

</form>

