@model List<MyELearningProject.DAL.Entities.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Öğrenci Listesi
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>

                        <th> Adı Soyadı</th>

                        <th>Sil</th>

                        <th>Güncelle</th>

                    </tr>
                    @if (Model.Count() == 0)
                    {
                        <div class="alert">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                           Hiç Bir Öğrenci Bulunamadı !
                        </div>
                    }


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StudentID</td>
                            <td>@item.Name @item.Surname</td>

                            <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-outline-danger">Sil</a></td>

                            <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-outline-warning">Güncelle</a></td>


                        </tr>
                    }
                </table>
                <a href="/Student/AddStudent/" class="btn btn-outline-primary">Yeni Öğrenci Girişi</a>


                <script>
                    
                    var close = document.getElementsByClassName("closebtn");
                    var i;
                  
                    for (i = 0; i < close.length; i++) {
                        // When someone clicks on a close button
                        close[i].onclick = function () {

                            // Get the parent of <span class="closebtn"> (<div class="alert">)
                            var div = this.parentElement;

                            // Set the opacity of div to 0 (transparent)
                            div.style.opacity = "0";

                            // Hide the div after 600ms (the same amount of milliseconds it takes to fade out)
                            setTimeout(function () { div.style.display = "none"; }, 600);
                        }
                    }
                </script>
            </div>
        </div>
    </div>
</div>


