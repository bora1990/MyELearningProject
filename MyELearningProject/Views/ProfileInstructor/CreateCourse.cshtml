@model MyELearningProject.DAL.Entities.Course
@{
    ViewBag.Title = "CreateCourse";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}




<h2>Kurs Bilgilerini Giriniz</h2>

<form method="post">
    <label>Kurs Adını Giriniz</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br /><br />
    <label>Kurs Fiyatını Giriniz</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br /><br />
    <label>Kurs Süresini Giriniz</label>
    @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
    <br /><br />
    <label>Kurs Gorselini Giriniz</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br /><br />
    <label>Kategoriyi Seçiniz</label>

    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br /><br />
    
    <p>@ViewBag.instructor</p>
    <input type="hidden" class="visually-hidden" name="InstructorID" value="@ViewBag.instructor" />
    

    <button class="btn btn-primary" style="position:absolute;left:20px;bottom:20px">Kategori Kaydet</button>

</form>