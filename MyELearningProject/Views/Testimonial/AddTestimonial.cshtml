
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>AddTestimonial</h2>

<form method="post">
    <br />
    <br />
    <label>Referans Adı Soyadı</label>
    <input type="text" name="NameSurname" class="form-control" />
    <br />
    <br />
    <label>Başlık</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <br />
    <label>Yorum</label>
    <input type="text" name="Comment" class="form-control" />
    <br />
    <br />

    <label for="statusCheckbox">Aktif</label>
    <input type="checkbox" id="statusCheckbox">
    <button onclick="toggleCheckbox()">Pasif Ouştur</button>


    <br />
    <br />
    <button class="btn btn-primary">Gönder</button>

</form>

<script>

function toggleCheckbox() {
    var checkbox = document.getElementById("statusCheckbox");

    
    checkbox.disabled = !checkbox.disabled;

    if (checkbox.disabled) {
        checkbox.nextSibling.textContent = "Pasif";
    } else {
        checkbox.nextSibling.textContent = "Aktif";
    }
}
</script>







