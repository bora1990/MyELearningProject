@model List<MyELearningProject.DAL.Entities.Course>
@{ 
    int a = 0;
}
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Kurslar</h6>
            <h1 class="mb-5">Popüler Kurslar</h1>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-4" data-wow-delay="0.1s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="@item.ImageUrl" alt="">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Daha Fazlası</a>
                                <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Şimdi Katıl</a>
                            </div>
                        </div>

                        @if (item.CourseID == 29)
                        {
                            <div class="text-center p-4 pb-0">
                                <h3 class="mb-0">@item.Price ₺</h3>
                                <div class="mb-3">
                                    @for (int i = 1; i <= ViewBag.starCount0; i++)
                                    {
                                        <small class="fa fa-star text-primary"></small>
                                    }
                                    <small>(@ViewBag.Count)</small>
                                </div>
                                <h5 class="mb-4">@item.Title</h5>
                            </div>

                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.Instructor.Name @item.Instructor.Surname</small>
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.Duration</small>

                            </div>

                        }

                        @if (item.CourseID == 30)
                        {
                            <div class="text-center p-4 pb-0">
                                <h3 class="mb-0">@item.Price ₺</h3>
                                <div class="mb-3">
                                    @for (int i = 1; i <= ViewBag.starCount1; i++)
                                    {
                                        <small class="fa fa-star text-primary"></small>
                                    }
                                    <small>(@ViewBag.Count)</small>
                                </div>
                                <h5 class="mb-4">@item.Title</h5>
                            </div>

                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.Instructor.Name @item.Instructor.Surname</small>
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.Duration</small>

                            </div>

                        }

                        @if (item.CourseID == 31)
                        {
                            <div class="text-center p-4 pb-0">
                                <h3 class="mb-0">@item.Price ₺</h3>
                                <div class="mb-3">
                                    @for (int i = 1; i <= ViewBag.starCount2; i++)
                                    {
                                        <small class="fa fa-star text-primary"></small>
                                    }
                                    <small>(@ViewBag.Count)</small>
                                </div>
                                <h5 class="mb-4">@item.Title</h5>
                            </div>

                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.Instructor.Name @item.Instructor.Surname</small>
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.Duration</small>

                            </div>

                        }
                    </div>

                </div>
                       



             }
        </div>
               
    </div>

</div>


               