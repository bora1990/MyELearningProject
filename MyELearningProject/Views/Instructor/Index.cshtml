@model List<MyELearningProject.DAL.Entities.Instructor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Kategori Listesi
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Eğitmen Foto</th>
                        <th>Eğitmen Adı Soyadı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    
                   
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InstructorID</td>
                            <td><img src="@item.ImageUrl" style="border-radius:50%" width="100px"/></td>

                            <td>@item.Name @item.Surname</td>

                            <td><a href="/Instructor/DeleteInstructor/@item.InstructorID" class="btn btn-outline-danger">Sil</a></td>

                            <td><a href="/Instructor/UpdateInstructor/@item.InstructorID" class="btn btn-outline-warning">Güncelle</a></td>

                       </tr>

                    }
                </table>
                <a href="/Instructor/AddInstructor/" class="btn btn-outline-primary">Yeni Eğitmen Girişi</a>
            </div>
        </div>
    </div>
</div>
