@model List<MyELearningProject.DAL.Entities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Kurs Listesi
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Kurs Adı</th>
                        <th>Kategori</th>
                        <th>Eğitmen</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>

                    @if (Model.Count() == 0)
                    {
                        <div class="alert">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            Hiç Bir Kurs Bulunamadı !
                        </div>
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CourseID</td>
                            <td>@item.Title</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.Instructor.Name</td>

                            <td><a href="/Course/DeleteCourse/@item.CourseID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Course/UpdateCourse/@item.CourseID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/Course/CreateCourse/" class="btn btn-outline-primary">Yeni Kurs Girişi</a>
                <script>

         var close = document.getElementsByClassName("closebtn");
         var i;

         for (i = 0; i < close.length; i++) {
            
             close[i].onclick = function () {

                 // Get the parent of <span class="closebtn"> (<div class="alert">)
                 var div = this.parentElement;

                 // Set the opacity of div to 0 (transparent)
                 div.style.opacity = "0";

                 // Hide the div after 600ms (the same amount of milliseconds it takes to fade out)
                 setTimeout(function () { div.style.display = "none"; }, 600);
             }
         }
                </script>

            </div>
        </div>
    </div>
</div>



